        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <!--GRID-->
    <Grid>
        <!--Top Menu-->
        <DockPanel VerticalAlignment="Top" Height="20" Background="Red"/>

        <!--Left-Tool-Panel-->
        <ToolBarPanel x:Name="toolBarPanel_MainLeft" Background="#FF51514F"  HorizontalAlignment="Left" Width="100" Margin="0,20,0,0"/>
    </Grid>




</Window>
